{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "Bundler"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__test__/**/*"]
}